<section class="movies">
    <div class="headings">
        <a href="/"><h1>{{title}}</h1></a>
        <h4>Click on the movie to check the showtimes!</h4>
    </div>
    <div class="movies-container">
        {{#each movies}}
        <div class="movie-card">
            <a href="/movies/{{_id}}">
            <img src="{{image}}" alt="movie-image"></a>
            <h4>{{title}}</h4>
            <a href="/movies/{{_id}}">See more</a>
        </div>
        {{/each}}
    </div>
</section> 